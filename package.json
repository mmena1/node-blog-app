  "scripts": {
    "build": "webpack --config webpack.config.js",
    "build-watch": "webpack --config webpack.config.js --watch",
    "start": "yarn build && node ./dist/server.js",
    "start-watch": "concurrently \"yarn build-watch\"  \"nodemon ./dist/server.js\" -p command",
    "test": "export NODE_ENV=test && mocha --require ts-node/register test/**/*.test.ts test/**/**/*.test.ts",
    "test-watch": "nodemon --exec 'yarn test'"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.2.0",
    "@types/sequelize": "^4.27.18",
    "@types/sinon": "^4.3.3",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.1.1",
    "morgan": "^1.9.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.37.7",
    "sinon": "^5.0.7",
    "supertest": "^3.1.0",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3"
  },
